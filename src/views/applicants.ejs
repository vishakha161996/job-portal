<!-- views/applicants.ejs -->
<section class="applicants">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mt-5 mb-4 text-center" style="color: #7bb254;">Applicants List</h1>
                <% Object.keys(applicants).forEach(jobId => { %>
                    <h2>Job ID: <%= jobId %></h2>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-success" style="margin-top: 1em;">
                            <thead>
                                <tr>
                                    <th scope="col">Job-ID</th>
                                    <!-- <th scope="col">ID</th> -->
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Contact</th>
                                    <th scope="col">Resume</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% applicants[jobId].forEach(applicant => { %>
                                    <tr>
                                        <td style="vertical-align: middle"><%= applicant.jobId %></td>
                                        <!-- <td style="vertical-align: middle"><%= applicant.id %></td> -->
                                        <td style="vertical-align: middle"><%= applicant.name %></td>
                                        <td style="vertical-align: middle"><%= applicant.email %></td>
                                        <td style="vertical-align: middle"><%= applicant.contact %></td>
                                        <td style="vertical-align: middle">
                                            <% if (applicant.resume) { %>
                                                <a href="<%= applicant.resume %>">Download</a>
                                                <!-- <embed src="<%= applicant.resume %>" type="application/pdf" width="100%" height="150px" /> -->
                                            <% } else { %>
                                                No resume uploaded
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>                               
                            </tbody>
                        </table>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</section>