<!-- views/signup.ejs -->
<div class="container signup"> 
    <div class="row signup-row">
        <h1 class="mt-5 mb-4 text-center">SignUp</h1>
        <!-- LEFT COL -->
        <div class="col-md-6">
            <form action="/signup" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label screen-only">Enter Name</label>
                    <input type="text" class="form-control field-textual" id="name" name="name" placeholder="Enter Name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label screen-only">Enter Email</label>
                    <input type="email" class="form-control field-textual" id="email" name="email" placeholder="Enter Email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label screen-only">Enter Password</label>
                    <input type="password" class="form-control field-textual" id="password" name="password" placeholder="Enter Password">
                </div>
                <button type="submit" class="btnn-link btnn">SignUp</button>
            
                <hr/>
                <div>
                    <h6 class="job-portal-h6 text-center mt-4"> Login if already have an account</h6>
                    <a href="/login" class="btnn-link btnn"> Login </a>
                </div>
            </form>
        </div>
        <!-- RIGHT COL -->
        <div class="col-md-6">
            <div class="img-container-signup">
                <img src="images/black-woman-portrait-smile-and-arms-crossed-in-the-city-for-vision-ambition-or-career-success-co.jpg" />
            </div>
        </div>
        
    </div>
</div>



